<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.expirytracker.controller.MainController">
    
    <!-- Top: Title and Search -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Household Expiry Tracker" textFill="white">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Search:" textFill="white"/>
                <TextField fx:id="searchField" promptText="Search items by name or category..." 
                          prefWidth="300" HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Center: Table -->
    <center>
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <TableView fx:id="itemsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Product Name" prefWidth="200"/>
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="120"/>
                    <TableColumn fx:id="expiryDateColumn" text="Expiry Date" prefWidth="120"/>
                    <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="80"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            
            <!-- Color Legend -->
            <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10;">
                <Label text="ðŸŸ¢ Fresh (>14 days)"/>
                <Label text="ðŸŸ¡ Expiring Soon (1-14 days)"/>
                <Label text="ðŸ”´ Expired"/>
            </HBox>
        </VBox>
    </center>
    
    <!-- Right: Action Buttons -->
    <right>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Button fx:id="addButton" text="Add Item" onAction="#handleAddItem" 
                    prefWidth="120" style="-fx-font-size: 14px; -fx-background-color: #27ae60; -fx-text-fill: white;"/>
            
            <Button fx:id="editButton" text="Edit Item" onAction="#handleEditItem" 
                    prefWidth="120" style="-fx-font-size: 14px; -fx-background-color: #3498db; -fx-text-fill: white;"/>
            
            <Button fx:id="deleteButton" text="Delete Item" onAction="#handleDeleteItem" 
                    prefWidth="120" style="-fx-font-size: 14px; -fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            
            <Separator/>
            
            <Button fx:id="scanButton" text="ðŸ“· Scan Image" onAction="#handleScanImage" 
                    prefWidth="120" style="-fx-font-size: 14px; -fx-background-color: #9b59b6; -fx-text-fill: white;"/>
            
            <Separator/>
            
            <Button fx:id="exportButton" text="Export CSV" onAction="#handleExportCsv" 
                    prefWidth="120" style="-fx-font-size: 14px;"/>
            
            <Button fx:id="importButton" text="Import CSV" onAction="#handleImportCsv" 
                    prefWidth="120" style="-fx-font-size: 14px;"/>
        </VBox>
    </right>
    
    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 8;">
            <Label fx:id="statusLabel" text="Ready" textFill="white"/>
        </HBox>
    </bottom>
</BorderPane>
